# VM.Standard.E2.1.Micro (1/8 OCPU, 1GB RAM, 50 Mbps external)
# Optimized for shared tenancy with conservative targets

# === P95 CPU Control (Oracle-compliant 7-day window) ===
CPU_P95_TARGET_MIN=22.0
CPU_P95_TARGET_MAX=25.0
CPU_P95_SETPOINT=23.5
CPU_P95_EXCEEDANCE_TARGET=6.5
CPU_P95_BASELINE_INTENSITY=20.0
CPU_P95_HIGH_INTENSITY=30.0
MEM_TARGET_PCT=0                    # Disabled - insufficient RAM (1GB) makes memory targeting counterproductive
NET_TARGET_PCT=25                   # Target 25% of 50 Mbps = 12.5 Mbps external (above 20% Oracle threshold)

# === Safety stop thresholds ===
CPU_STOP_PCT=45                     # Lower for shared tenancy
MEM_STOP_PCT=80                     # Safe when MEM targeting disabled
NET_STOP_PCT=40                     # Conservative for external bandwidth

# === Control behavior ===
CONTROL_PERIOD_SEC=5
AVG_WINDOW_SEC=300
HYSTERESIS_PCT=5
JITTER_PCT=15
JITTER_PERIOD_SEC=5

# === Load average monitoring ===
LOAD_THRESHOLD=0.6
LOAD_RESUME_THRESHOLD=0.4
LOAD_CHECK_ENABLED=true

# === Memory safety ===
MEM_MIN_FREE_MB=512                 # Critical for 1GB systems
MEM_STEP_MB=64

# === Network configuration ===
NET_MODE=client
NET_PROTOCOL=udp
NET_PEERS=8.8.8.8,1.1.1.1,9.9.9.9
NET_PORT=15201
NET_BURST_SEC=10
NET_IDLE_SEC=10
NET_PACKET_SIZE=8900                # Optimized for Oracle Cloud MTU 9000

# === Network sensing ===
NET_SENSE_MODE=container
NET_IFACE_INNER=eth0
NET_LINK_MBIT=50                    # E2 external bandwidth cap

# === Network rate limits ===
NET_MIN_RATE_MBIT=1
NET_MAX_RATE_MBIT=40                # Well below 50 Mbps cap for safety

# === Network fallback (E2 shape: CPU + Network protection) ===
NET_ACTIVATION=adaptive             # Smart activation: adaptive, always, off
# NET_FALLBACK_START_PCT=19.0       # Activate below this CPU P95 (default)
# NET_FALLBACK_STOP_PCT=23.0        # Deactivate above this CPU P95 (default)
# NET_FALLBACK_DEBOUNCE_SEC=30      # Minimum time between state changes (default)
# NET_FALLBACK_MIN_ON_SEC=60        # Minimum active duration (default)
# NET_FALLBACK_MIN_OFF_SEC=30       # Minimum inactive duration (default)
# Note: E2 shapes only consider CPU P95 + network for reclamation (no memory rule)